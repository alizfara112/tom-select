
	{# print a navigation link, add active/text-dark class if the current nav item is the current page
	 # https://www.11ty.dev/docs/data-eleventy-supplied/#page-variable-contents
	 #}
	{% macro nav_link(item) %}
		<a class="nav-link px-0 {% if page.filePathStem == item.url %} text-dark {% endif %}" href="{{ item.url }}">

		{% if item.title %}
			{{ item.title }}
		{% elseif item.data.nav_title %}
			{{ item.data.nav_title }}
		{% else %}
			{{ item.data.title }}
		{% endif %}
		</a>
	{% endmacro %}


	<h5 class="mt-3 mb-2">Examples</h5>
	<nav class="nav flex-column">
		{% for demo in collections.demosAlpha %}
		  {{ nav_link(demo) }}
		{% endfor %}
	</nav>


	<h5 class="mt-3 mb-2">Documentation</h5>
