	{# print a navigation link, add active/text-dark class if the current nav item is the current page
	 # https://www.11ty.dev/docs/data-eleventy-supplied/#page-variable-contents
	 #}


	{% macro nav_link(item) %}
		<a class="nav-link {% if page.url == item.url or page.filePathStem == item.filePathStem %} active {% endif %}" href="{{ item.url }}">

		{% if item.title %}
			{{ item.title }}
		{% elseif item.data.nav_title %}
			{{ item.data.nav_title }}
		{% else %}
			{{ item.data.title }}
		{% endif %}
		</a>
	{% endmacro %}


	<a href="/examples/" class="h5 px-4 py-3 my-0 d-block">Examples</a>
