{% endset %}

<script>
{% set script %}
new TomSelect('#clear-button',{
	plugins: {
		'clear_button':{
			'title':'Remove all selected options',
		}
	},
	persist: false,
	create: true,
});
{% endset %}
</script>


{{ demo( label, html, script) }}


