{% set label %}
<label class="h2 mb-3" for="select-words-unique">
	Unique Words
</label>
{% endset %}

{% set html %}
<select id="select-words-unique" multiple placeholder="Enter unique words (case-insensitive)..."></select>
{% endset %}

<script>
{% set script %}
var unique = new Selectize('#select-words-unique',{
	create: true,
	createFilter: function(input) {
		input = input.toLowerCase();
		return $.grep(unique.getValue(), function(value) {
			return value.toLowerCase() === input;
		}).length == 0;
	}
});
{% endset %}
</script>

