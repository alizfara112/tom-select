{% set label %}
<label class="h2 mb-3" for="select-words-length">
	Minimum Length
</label>
{% endset %}

{% set html %}
<select id="select-words-length" multiple placeholder="Enter a word longer than the minimum number of characters..."></select>
<input id="length" value="2" />
{% endset %}

<script>
{% set script %}
new Selectize('#select-words-length',{
	create: true,
	createFilter: function(input) { return input.length >= parseInt($('#length').val(), 10); }
});
{% endset %}
</script>

