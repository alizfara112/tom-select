{% from "demo.njk" import demo %}


{% set label %}
<label class="h2 mb-3" for="select-locked-single">
	Locked (single)
</label>
<p>Selectize controls can be locked to prevent user interaction.</p>
{% endset %}

{% set html %}
<select id="select-locked-single" placeholder="No input allowed...">
	<option value="A">Option A</option>
	<option value="B" selected>Option B</option>
	<option value="C">Option C</option>
</select>
{% endset %}

<script>
{% set script %}
(new Selectize('#select-locked-single')).lock();
{% endset %}
</script>

{{ demo( label, html, script) }}


